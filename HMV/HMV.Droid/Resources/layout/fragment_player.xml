<?xml version="1.0" encoding="utf-8" ?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

  <FrameLayout
     android:id="@+id/fragment_player_youtube_container"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:visibility="invisible"/>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center_vertical"
       android:background="@color/colorWhite"
       android:padding="@dimen/layout_padding"
       android:orientation="vertical">
      <ImageView
          android:id="@+id/fragment_video_info_thumbnail_image_view"
          android:scaleType="fitXY"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"/>

      <TextView
          android:id="@+id/fragment_player_title_text_view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/colorPrimaryText"
          android:textSize="@dimen/primary_text_size"
          android:singleLine="false"
          android:layout_marginTop="8dp"/>

      <View style="@style/Divider"
            android:visibility="invisible"
            android:id="@+id/fragment_player_divider"/>

      <TextView
            android:id="@+id/fragment_player_desc_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/secondary_text_size"
            android:singleLine="false"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
  </ScrollView>
</LinearLayout>


